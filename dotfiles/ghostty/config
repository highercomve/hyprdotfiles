# ~/.config/ghostty/config
#
# Ghostty configuration to emulate Zellij's keybindings and default theme.
# This configuration has been verified against the official reference documentation
# at https://ghostty.org/docs/config/reference


# Set tab bar to the top (default)
gtk-tabs-location = top

# Ensure tabs respect the window theme
gtk-titlebar = true
gtk-titlebar-style=tabs
window-theme = ghostty

link-url = true
theme = Builtin Pastel Dark
font-size = 13
copy-on-select = clipboard

#=======================================================================
# KEYBINDINGS - ZELLIJ EMULATION (VERIFIED)
#=======================================================================

# --- Zellij-like Pane Management ---

# Create a new split using the Ctrl+p -> <key> sequence.
keybind = ctrl+p>n=new_split:down
keybind = ctrl+p>d=new_split:down
keybind = ctrl+p>r=new_split:right
keybind = ctrl+p>l=new_split:left
keybind = ctrl+p>u=new_split:up

# Navigate between panes with Alt + arrow or hjkl keys.
keybind = alt+right=goto_split:right
keybind = alt+left=goto_split:left
keybind = alt+up=goto_split:up
keybind = alt+down=goto_split:down
keybind = alt+l=goto_split:right
keybind = alt+h=goto_split:left
keybind = alt+k=goto_split:up
keybind = alt+j=goto_split:down

# --- Zellij-like Tab Management ---

# Create a new tab.
keybind = ctrl+t=new_tab

# Navigate between tabs.
keybind = alt+shift+right=next_tab
keybind = alt+shift+left=previous_tab

# Or, using a sequence (requires modern Ghostty):
keybind = ctrl+t>n=new_tab
keybind = ctrl+t>right=next_tab
keybind = ctrl+t>left=previous_tab
